{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Bot (src/index.ts)",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "node",
      "runtimeArgs": ["--import", "tsx"],
      "program": "${workspaceFolder}/src/index.ts",
      "cwd": "${workspaceFolder}",
      "envFile": "${workspaceFolder}/.env",
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Debug via npm dev",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm run dev"
    }
  ]
} 